<!DOCTYPE html>
<html>
  <head>
    <title>PickPal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <%= link_to "PickPal", root_path, id: 'pickpal-logo' %>
      <nav>
        <% if current_user %>
          <%= link_to current_user, "https://www.reddit.com/user/#{current_user}" %>
          <%= link_to "Log out", logout_path %>
        <% else %>
          <%= link_to "Login with Reddit", login_path %>
        <% end %>
      </nav>
    </header>

    <div id="main">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "flash flash-#{name}" %>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
