<!DOCTYPE html>
<html>
  <head>
    <title>PickPal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <% if current_user %>
        <%= link_to current_user, "https://www.reddit.com/user/#{current_user}" %>
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Login with Reddit", login_path %>
      <% end %>
    </header>

    <%= yield %>

  </body>
</html>
